<section class="presentation-list">
  <% unless presentations.select{ |p| p.keynote }.empty? %>
    <h2 class="presentations-list__title">Keynotes</h2>
    <% if keynotes_intro.present? %>
      <div class="presentations-list__intro">
        <%= render_markdown(keynotes_intro) %>
      </div>
    <% end %> 
    
    <% presentations.select{ |p| p.keynote }.each do |presentation| %>
      <%= partial "partials/presentation", locals: {presentation: presentation} %>
    <% end %>
  <% end %>
</section>

<section class="presentation-list">
  <h2 class="presentations-list__title">Presentations</h2>
  <% if presentations_intro.present? %>
    <div class="presentations-list__intro">
      <%= render_markdown(presentations_intro) %>
    </div>
  <% end %>
  
  <% presentations.select{ |p| !p.keynote.present? }.each do |presentation| %>
    <%= partial "partials/presentation", locals: {presentation: presentation} %>
  <% end %>
</section>
